/* pages/index/index.wxss */
page {
  height: 100%;
  background-color: #8ED145;
}

.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  font-size: 32rpx;
  border: 1rpx solid #999;
  background-color: #8ED145;
  margin-top: 20rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}

.userName {
  font-size: 32rpx;
  font-weight: 700;
  margin: 100rpx 0;
}

.goStudy {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 20rpx;
}